<h2>All Orders</h2>

<% @orders.each do |order| %>
  <% if current_user.id == order.user_id %>
    <p>Quantity: <%= order.quantity %></p>
    <p>Total Price: <%= order.total %></p>
    <p>Line Items: </p>
    <ul>
      <% order.line_items.each do |item| %>
      <li><%= item.quantity %> x <%= item.product.name %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
