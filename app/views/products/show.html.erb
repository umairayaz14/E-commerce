<p id="notice"><%= notice %></p>
<p id='notice'><%= alert %></p>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

 <% if @product.images.attached? %>
          <% @product.images.each do |img| %>
               <%= image_tag url_for(img) , size: '200x200'%>
          <% end %>
        <% end%>

 <p>

<div class="container try">
<table class='tab'>
 <thead>
  <tr>
   <th>Name</th>
   <th>Description</th>
   <th colspan="2"></th>
  </tr>
 </thead>
 <tbody id="add-comment">

   <h2>Comments</h2>
   <% @product.comments.each do |comment| %>
    <tr>
    <% if comment.persisted? %>
      <td><%= comment.name%></td>

      <td><%= comment.description %></td>

      <td><%=link_to "Edit", edit_product_comment_path(comment.product_id, comment)%></td>
      <td><%= link_to 'Destroy', product_comment_path(comment.product_id, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>

    <% end %>
    </tr>
   <% end %>

 </tbody>
</table>

 <h2>Add a comment:</h2>
 <%= render "comments/form" %>
 <%= link_to 'Back', products_path %>
</div>
