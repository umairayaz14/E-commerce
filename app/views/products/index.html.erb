<p id="notice"><%= notice %></p>

<% flash.each do |name, msg| %>
    <div class='container-fluid' style='color: red'>
    <br/>
      <%= content_tag :div, msg, :id => "flash_#{name}",  :class => "alert alert-#{name}" %>
     </div>
<% end %>

<div class='align'>
  <%= link_to "New Product", new_product_path %>
</div>
<h1 class='h1-align'>Products</h1>

<table class='tab'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td>
        <% if product.images.attached? %>
          <% product.images.each do |img| %>
               <%= image_tag url_for(img) , size: '50x50'%>
          <% end %>
        <% end%>
        </td>
        <td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
