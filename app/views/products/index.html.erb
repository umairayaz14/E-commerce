<p id="notice"><%= notice %></p>

<div class='align'>
  <%= link_to "New Product", new_product_path %>
</div>
<h1 class='h1-align'>Products</h1>
<table class='tab'>
   <thead>
     <tr>
       <th>Name</th>
       <th>Description</th>
       <th>Image</th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= link_to 'Show Product', product_path(product)%>
          <td>
          <% if product.images.attached? %>
            <% product.images.each do |img| %>
                 <%= image_tag url_for(img) , size: '50x50'%>
            <% end %>
          <% end%>
          </td>
          <td><%= link_to 'Add Comment', new_product_comment_path(product)%>
          <td><%= link_to 'Show Comments', product_comments_path(product)%>
          <td><%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
        </tr>
      <% end %>
   </tbody>
</table>
<br>
